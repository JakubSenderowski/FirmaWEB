@model IEnumerable<Firma.Intranet.Models.CMS.Strona>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="bi bi-ui-checks"></i> Utwórz nową pozycję.
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LinkTytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tresc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozycja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LinkTytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozycja)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdStrony" class="text-decoration-none text-dark">
                        
                        <i class="bi bi-pencil-square"></i>Edit
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.IdStrony" class="text-decoration-none text-dark">
                        <i class="bi bi-plus"></i>Details
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.IdStrony" class="text-decoration-none text-dark">
                        <i class="bi bi-trash3-fill"></i>Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
