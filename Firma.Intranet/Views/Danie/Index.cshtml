@model IEnumerable<Firma.Data.Data.Menu.Danie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="bi bi-ui-checks"></i> Utwórz nową pozycję.
    </a>
</p>
<table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FotoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FotoURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategoria.Nazwa)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdDania" class="text-decoration-none text-dark">
                        <i class="bi bi-pencil-square"></i>Edit
                </a> |
                    <a asp-action="Details" asp-route-id="@item.IdDania" class="text-decoration-none text-dark">
                        <i class="bi bi-plus"></i>Details
                </a> |
                    <a asp-action="Delete" asp-route-id="@item.IdDania" class="text-decoration-none text-dark">
                        <i class="bi bi-trash3-fill"></i>Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
