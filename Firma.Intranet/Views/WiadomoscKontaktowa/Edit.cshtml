@model Firma.Intranet.Models.CMS.WiadomoscKontaktowa

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>WiadomoscKontaktowa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdWiadomosciKontaktowej" />
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uwagi" class="control-label"></label>
                <input asp-for="Uwagi" class="form-control" />
                <span asp-validation-for="Uwagi" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Zapisz" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger mt-2">
        <i class="bi bi-arrow-left-circle-fill"></i> Powrót
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
