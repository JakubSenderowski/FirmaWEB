@model Firma.Intranet.Models.Zamowienia.MetodaPlatnosci

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MetodaPlatnosci</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow p-3 border border-warning">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdMetodyPlatnosci" />
                    <div class="form-group">
                        <label asp-for="Nazwa" class="control-label"></label>
                        <input asp-for="Nazwa" class="form-control" />
                        <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                        <input asp-for="Opis" class="form-control" />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Zapisz" class="btn btn-warning" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger mt-2">
        <i class="bi bi-arrow-left-circle-fill"></i> Powrót
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
