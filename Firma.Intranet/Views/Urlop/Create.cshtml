@model Firma.Data.Data.Intranet.Urlopy

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Urlopy</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow p-3 border border-warning">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DataOd" class="control-label"></label>
                        <input asp-for="DataOd" class="form-control" />
                        <span asp-validation-for="DataOd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataDo" class="control-label"></label>
                        <input asp-for="DataDo" class="form-control" />
                        <span asp-validation-for="DataDo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoURL" class="control-label"></label>
                        <input asp-for="FotoURL" class="form-control" />
                        <span asp-validation-for="FotoURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdPracownika" class="control-label"></label>
                        <select asp-for="IdPracownika" class="form-control" asp-items="ViewBag.IdPracownika"></select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning mt-1">
                            <i class="bi bi-database-fill-add"></i>Utwórz + Zapisz.
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger mt-2">
        <i class="bi bi-arrow-left-circle-fill"></i> Powrót
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
