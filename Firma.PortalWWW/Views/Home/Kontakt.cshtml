@{
    ViewData["Title"] = "Kontakt";
}



<div class="container">
    <h1 class="display-6 text-center fs-2 mb-5">Zapraszamy do kontaktu Poniedziałek - Sobota w godzinach 9-21.</h1>
    <div class="row">
        <div class="col-12 col-lg-6 mb-4 text-center">
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputFirstName">Imię</label>
                        <input type="text" class="form-control" id="inputFirstName" placeholder="Imię">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputLastName">Nazwisko</label>
                        <input type="text" class="form-control" id="inputLastName" placeholder="Nazwisko">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="telefon">Email</label>
                        <input type="number" class="form-control" id="telefon" placeholder="Telefon">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Uwagi</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Uwagi dotyczące zamówienia."></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-5">Wyślij</button>
            </form>
        </div>

        <div class="col-12 col-lg-6 mb-4 align-items-center">
            <img src="~/content/kontakt-zdjecie.png" class="card-img-top" alt="...">
        </div>
    </div>
</div>


