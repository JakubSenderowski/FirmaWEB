@model List<Firma.Data.Data.Menu.Danie>

@{
    ViewData["Title"] = "Menu";
}

<div class="container">
    <form method="get" class="text-center mb-4">
        <input type="text" name="szukaj" class="form-control d-inline w-50" placeholder="Wyszukaj danie" value="@ViewBag.szukaj" />
        <button type="submit" class="btn btn-warning mt-2">Szukaj</button>
    </form>

    <div class="row justify-content-center">
        @foreach (var danie in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card border-warning mb-3" style="width: 18rem;">
                    <img src="~/content/@(danie.FotoURL).png" class="card-img-top" alt="@danie.Nazwa">
                    <div class="card-body">
                        <h5 class="card-title">@danie.Nazwa</h5>
                        <p class="card-text">@danie.Opis</p>
                        <a href="#" class="btn btn-warning">Zamów</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>